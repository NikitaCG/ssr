{
  "compilerOptions": {
    "keyofStringsOnly": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "watch": true,
    "typeRoots": ["src/typings", "./node_modules/@types"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule":true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "Components/*": [
        "./client/Components/*"
      ]
    },
  },
  "include": ["./src", "declaration.d.ts"]
}